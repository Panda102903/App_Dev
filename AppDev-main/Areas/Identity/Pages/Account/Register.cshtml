@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    h1{
        text-align:center;
        color: #F3EDC8;
    }    
    h2{
        color: #F3EDC8;
    }
    #formRegister{
        text-align:center;
        display:flex;
        justify-content: center;
    }
    #name {
        margin-top: 5px;
    }

    #email {
        margin-top: 5px;
    }

    #pass {
        margin-top: 5px;
    }

    #confirmPass {
        margin-top: 5px;
    }

    #address {
        margin-top: 5px;
    }

    #role {
        margin-top: 5px;
    }
    #registerSubmit{
        margin-top: 10px;
        background-color: #3887BE;
        border: none;
        box-shadow: 0 5px 0 #38419D;
        border-radius: 4px;
        transition: .5s;
    }
    #registerSubmit:hover {
        background-color: #3559E0;
        transform: translateY(1.5px);
    }
    #registerSubmit:active {
        box-shadow: none;
        transform: translateY(5px);
    }
</style>

<h1>@ViewData["Title"]</h1>

<div id="formRegister" class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="email" class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div id="name" class="form-floating">
                <input asp-for="Input.FullName" class="form-control" aria-required="true" />
                <label asp-for="Input.FullName"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div id="pass" class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div id="confirmPass" class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div id="address" class="form-floating">
                <input asp-for="Input.HomeAddress" class="form-control" aria-required="true" />
                <label asp-for="Input.HomeAddress"></label>
                <span asp-validation-for="Input.HomeAddress" class="text-danger"></span>
            </div>
            <div id="role" class="form-floating">
                <select asp-for="Input.Role" asp-items="Model.Roles" class="form-select" aria-required="true">
                    <option></option>
                </select>
                <label asp-for="Input.Role"></label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
